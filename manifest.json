{
  "manifest_version": 3,
  "name": "무료 마크다운 편집기",
  "version": "1.1.0",
  "description": "실시간 미리보기, 다크모드, 파일 업로드/다운로드를 지원하는 무료 마크다운 편집기",
  "action": {
    "default_popup": "popup.html",
    "default_title": "마크다운 편집기"
  },
  "side_panel": {
    "default_path": "editor.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ]
}
